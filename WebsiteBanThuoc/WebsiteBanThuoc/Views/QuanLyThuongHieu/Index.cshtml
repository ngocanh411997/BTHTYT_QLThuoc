@model IEnumerable<WebsiteBanThuoc.Models.ThuongHieu>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/LayOut/AdminLayout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Thêm mới Thương hiệu", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Mã Thương Hiệu
        </th>
        <th>
            Tên Thương Hiệu
        </th>
        <th>
            Xuất xứ
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MaTH)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TenTH)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DiaChi)
        </td>
        <td>
            @Html.ActionLink("Chỉnh sửa", "Edit", new { @MaTH=item.MaTH }) |
            @Html.ActionLink("Xóa", "Delete", new { @MaTH=item.MaTH })
        </td>
    </tr>
}

</table>
