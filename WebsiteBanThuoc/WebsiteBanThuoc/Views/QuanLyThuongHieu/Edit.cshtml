@model WebsiteBanThuoc.Models.ThuongHieu

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/LayOut/AdminLayout.cshtml";
}

<h2>Chỉnh sửa Thương hiệu</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
       @Html.ValidationSummary(true)
    <div class="form-group">
        @Html.LabelFor(model => model.MaTH,"Mã Thương hiệu", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <span style="font-size:15pt;margin-top:2px;margin-left:5px">@Model.MaTH</span>
            @Html.Hidden("MaTH", Model.MaTH)
        </div>
    </div>
    <br />

        <div class="form-group">
            @Html.LabelFor(model => model.TenTH,"Tên Thương hiệu", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenTH, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenTH, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DiaChi,"Xuất xứ", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
